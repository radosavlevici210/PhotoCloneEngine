# PhotoClone AI Dashboard - Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/photoclone_ai
PGHOST=localhost
PGPORT=5432
PGUSER=photoclone_user
PGPASSWORD=secure_password
PGDATABASE=photoclone_ai

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Security
SESSION_SECRET=your_ultra_secure_session_secret_min_32_chars
COOKIE_SECRET=your_secure_cookie_secret

# AI/ML Configuration
ML_MODEL_PATH=/models
TRAINING_DATA_PATH=/data/training
MAX_CONCURRENT_JOBS=5
GPU_ENABLED=true

# Enterprise Features
ENTERPRISE_MODE=true
MAX_USERS=unlimited
SUPPORT_LEVEL=enterprise
API_RATE_LIMIT=10000

# Monitoring & Logging
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
SYSTEM_MONITORING=true

# External Services (Optional)
# OPENAI_API_KEY=your_openai_key_for_ai_features
# ANTHROPIC_API_KEY=your_anthropic_key
# GOOGLE_CLOUD_KEY=your_google_cloud_key

# Email Configuration (for notifications)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your_email@domain.com
# SMTP_PASS=your_email_password

# Storage Configuration
UPLOAD_MAX_SIZE=100MB
STORAGE_PATH=/storage
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily

# Performance
CACHE_TTL=3600
CONNECTION_POOL_SIZE=20
REQUEST_TIMEOUT=30000

# Development Only
VITE_DEV_SERVER=true
HOT_RELOAD=true
SOURCE_MAPS=true